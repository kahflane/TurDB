{
  "permissions": {
    "allow": [
      "Skill(superpowers:brainstorming)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo test:*)",
      "Skill(superpowers:test-driven-development)",
      "Skill(superpowers:using-superpowers)",
      "Skill(superpowers:using-git-worktrees)",
      "Bash(git worktree:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Skill(superpowers:finishing-a-development-branch)",
      "Bash(cargo build:*)",
      "Skill(superpowers:requesting-code-review)",
      "Bash(git rev-parse:*)",
      "Bash(cargo check:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(./scripts/lint-unsafe-safety.sh:*)",
      "Bash(MIRIFLAGS=\"-Zmiri-disable-isolation\" cargo +nightly miri test:*)",
      "Bash(./scripts/lint-inline-comments.sh:*)",
      "Bash(./scripts/lint-unwrap-panic.sh:*)",
      "Bash(cargo bench:*)",
      "Bash(wc:*)",
      "Bash(grep:*)",
      "Bash(git rev-list:*)",
      "Bash(git -C:*)",
      "Bash(sort:*)",
      "Bash(git grep:*)",
      "Bash(RUST_BACKTRACE=1 cargo test:*)",
      "Bash(cloc:*)",
      "Bash(cargo clean:*)",
      "Bash(ls:*)",
      "Bash(tee:*)",
      "Bash(./target/release/turdb:*)",
      "Bash(sqlite3:*)",
      "Skill(superpowers:systematic-debugging)",
      "WebSearch",
      "Bash(timeout 120 cargo test:*)",
      "Bash(echo:*)",
      "Bash(timeout 30 cargo test:*)",
      "Bash(timeout 20 cargo test:*)",
      "Bash(timeout 60 cargo test:*)",
      "Bash(for:*)",
      "Bash(do echo \"=== Run $i ===\")",
      "Bash(done)",
      "Bash(tokei:*)",
      "Bash(xxd:*)",
      "Bash(pnpm install)",
      "Bash(pnpm build:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm exec napi build:*)",
      "Bash(pnpm tsc:*)",
      "Bash(napi build:*)",
      "Bash(pnpm run build:*)",
      "Skill(superpowers:receiving-code-review)",
      "Bash(chmod:*)",
      "Bash(.claude/hooks/*.sh:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-edit.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-write.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash(cargo test:*)",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/test-reminder.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-start.sh"
          }
        ]
      }
    ]
  }
}
